<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_not_satisfy"
        android:src="@drawable/ic_not_satisfy"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="128dp" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/text_not_satisfy_title"
        android:layout_below="@id/image_not_satisfy"
        android:textColor="#101010"
        android:textSize="17sp"
        android:text="You are not satisfied with the contents?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/text_not_satisfy_description"
        android:layout_below="@id/text_not_satisfy_title"
        android:textSize="14sp"
        android:text="Let Bao Moi introduce to you the newest and most appropriate headlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/text_not_satisfy_description"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorTextSpecial"
        android:layout_below="@id/divider"
        android:textSize="13sp"
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>