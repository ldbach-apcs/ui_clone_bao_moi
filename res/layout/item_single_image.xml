<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="96dp">


    <ImageView
        android:id="@+id/item_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_comment"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_img"
        android:layout_toEndOf="@+id/item_img"
        android:maxLines="3"
        android:text="This is a very long title. hope it will drop into the new line :D" />

    <TextView

        android:layout_marginStart="4dp"
        android:textColor="#1F82F0"
        android:id="@+id/item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_img"
        android:layout_alignBottom="@id/item_img"
        android:text="Thanh niên" />


    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_source"
        android:layout_alignBottom="@id/item_source"
        android:text="10 phút trước" />

    <ImageView
        android:layout_marginEnd="2dp"
        android:id="@+id/ic_comment"
        android:tint="#808080"
        android:src="@drawable/ic_comment"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/item_img"
        android:layout_alignEnd="@id/item_title"/>

    <TextView
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:id="@+id/item_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_img"
        android:layout_toStartOf="@id/ic_comment"
        android:text="7" />

</RelativeLayout>